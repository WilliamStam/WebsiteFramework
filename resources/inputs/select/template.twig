{% if settings['custom_use_style']=='1' %}
	
	
	{{ settings['custom_style']|raw() }}

{% else %}
	{% if settings['style'] == "1" %}
		<div>
			<div class="form-group">
				<label for="{{ data['name'] }}" class="control-label">{{ settings['label'] }}</label>
				<input type="{{ settings['type'] }}" class="form-control" id="{{ data['name'] }}" name="{{ data['name'] }}" placeholder="{{ settings['placeholder'] }}">
			</div>
		</div>
	
	{% elseif settings['style'] == "2" %}
		<div class="form-horizontal">
			<div class="form-group">
				<label for="{{ settings['name'] }}" class="col-sm-2 control-label">{{ settings['label'] }}</label>
				<div class="col-sm-10">
					<input type="{{ settings['type'] }}" class="form-control" id="{{ data['name'] }}" name="{{ data['name'] }}" placeholder="{{ settings['placeholder'] }}">
				</div>
			</div>
		</div>
	
	{% elseif settings['style'] == "3" %}
		
		<div>
			
			<input type="{{ settings['type'] }}" class="form-control" id="{{ data['name'] }}" name="{{ data['name'] }}" placeholder="{{ settings['placeholder'] }}">
		
		</div>
	
	{% endif %}
{% endif %}